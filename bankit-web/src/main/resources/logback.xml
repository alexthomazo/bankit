<configuration>

	<!-- ***** CONSOLE ***** -->
	<!-- Application Console -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- *****  LOGGER  ***** -->
	<!-- Bankit Logger -->
	<logger name="org.alexlg.bankit" level="DEBUG" />
	
	<!-- Root Logger -->
	<root level="info">
		<appender-ref ref="console" />
	</root>

</configuration>